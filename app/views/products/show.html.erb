<div class="wrapper">
	<table class="table">
		<tbody>
			<tr>
				<td>Name</td>
				<td><%= @product.name %></td>
			</tr>
			<tr>
				<td>Description</td>
				<td><%= @product.description %></td>
			</tr>
			<tr>
				<td>Price</td>
				<td><%= @product.pricing %></td>
			</tr>
			<tr>
				<td>Category</td>
				<td><%= @product.category.name %></td>
			</tr>
		</tbody>
	</table>
	<div class="nav">
		<a href="/products/<%= @product.id %>/edit">Edit</a>
		<a href="/">Back</a>
	</div>
	<h2>Comment:</h2>
	<%= simple_form_for @comment do |f| %>
		<div id="comment_input">
			<%= f.input :product_id, as: :hidden, input_html: { value: @product.id } %>
			<%= f.input :comment, label: false, input_html: { class: 'form-control', rows: 1 } %>
		</div>
		<%= f.button :submit, "Submit", class: "btn-primary", id: "comment_btn" %>
	<% end %>
	<div class="comment_log">
	<% @product.comments.each do |entry| %>
		<p><%= entry.comment + " - " + entry.created_at.strftime("%m/%d/%y") %></p>
	<% end %>
	</div>
</div>